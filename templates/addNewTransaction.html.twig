{# addNewTransaction.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Ajouter une nouvelle transaction{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{asset('CSS/style.css')}}" type="text/css" />
        {% endblock %}

    </head>
    <body>
        {% block body %}

        <a href="/"><img class="imgCrossSign" src="{{asset('images/cross-sign.svg')}}" /></a>
        
        <h1>Ajouter une transaction</h1>

        <div class="alert">
            {{ confirmation }}
        </div>

        {{ form_start(form) }}
            {{ form_row(form.selectcrypto) }}
            {{ form_row(form.quantity) }}
            {{ form_row(form.price) }}

            <button type="submit">Ajouter</button>
        {{ form_end(form) }}
        
        {% endblock %}
    </body>
</html>
